# WASLA Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DJANGO_DB_DEFAULT=mysql
DB_NAME=wasla
DB_USER=wasla_user
DB_PASSWORD=secure-random-password
DB_HOST=localhost
DB_PORT=3306
MYSQL_ROOT_PASSWORD=mysql_root
MYSQL_DB_NAME=wasla
MYSQL_DB_USER=wasla_user
MYSQL_DB_PASSWORD=secure-random-password
MYSQL_DB_HOST=localhost
MYSQL_DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# Cache Configuration
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://redis:6379/1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@wasla.com

# Payment Providers
# Tap (GCC Payment Gateway)
TAP_API_KEY=your-tap-api-key
TAP_SANDBOX=true
TAP_MERCHANT_ID=your-merchant-id

# Stripe
STRIPE_API_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SANDBOX=false

# PayPal
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_SECRET=your-secret
PAYPAL_SANDBOX=true

# AWS S3 (for media storage - optional)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=wasla-media
AWS_S3_REGION_NAME=us-east-1

# Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=WASLA

# Docker Ports
BACKEND_PORT=8000
FRONTEND_PORT=5173
DB_PORT=5432
REDIS_PORT=6379

# Admin Panel
ADMIN_USER=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@wasla.local

# Celery (for async tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
